[Unit]
Description=Gunicorn instance to serve RPi Monitor

[Service]
User=root
Group=www-data
WorkingDirectory=/opt/rpi-monitor-server
ExecStart=/opt/rpi-monitor-server/venv/bin/gunicorn --workers 3 --bind unix:/tmp/rpi_monitor.sock -m 007 server:app  --log-level=info --access-logfile=/var/log/rpi-mointor-server.access --error-logfile=/var/log/rpi-mointor-server.error
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
